@model LoginSuccessModel

@{
    ViewBag.Title = "Login Success";
    Layout = "_AppLayout";
}

<h1 class="text-3xl font-bold">Login successful!</h1>
<p class="text-lg">Welcome back, @(Model.LoggedInUsername)!</p>

<a asp-controller="App" asp-action="Index" class="w-25 text-center p-3 font-bold text-xl mt-4 bg-zinc-50 bg-opacity-15 hover:bg-opacity-20">Go to home</a>