@model Domain.DTO.CreateTaskDto

@{
    ViewBag.Title = "Create a task";
    Layout = "_AppLayout";
}

<form type="post" asp-action="CreateTask" class="create-form" id="create-task-form">
    <div asp-validation-summary="All"></div>
    <input project-title type="text" asp-for="Name" placeholder="Task name"/>
    <textarea asp-for="Description" placeholder="Task description"></textarea>
    <input type="text" id="tag-add-input" placeholder="Enter tag..."/>
    <div id="tag-list" class="form-tag-display">
    </div>
    <input type="date" asp-for="Deadline" />
    <button type="submit" id="submit-create-task">Create</button>
</form>

@if (ViewBag.Errors is not null)
{
foreach (var error in ViewBag.Errors)
{
<span class="text-red-200 block mt-1">@error</span>
}
}
